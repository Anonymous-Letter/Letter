<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="105dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#3EB489"
        android:text="Logout"
        android:textColor="#FFFFFF"
        tools:textSize="12sp" />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoutBtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="3dp"
        android:text="Username: "
        android:textSize="20sp"
        android:textStyle="bold"
        tools:textSize="20sp" />

    <TextView
        android:id="@+id/uNameDisp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/emailDisp"
        android:layout_below="@+id/logoutBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/display"
        android:text="name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="21dp"
        android:text="Email:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emailDisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display"
        android:layout_marginStart="58dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/display2"
        android:autoText="true"
        android:text="ssss"
        android:textSize="20sp" />

    <Button
        android:id="@+id/resetPassBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailDisp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="#3EB489"
        android:text="Reset Password"
        android:textColor="#FFFFFF" />
</RelativeLayout>